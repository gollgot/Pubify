{% extends 'Layout/main_layout.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}


    <h1 id="page-title">Menu</h1>

    <div class="row">
        <div class="col-lg-12">

            <h2 class="text-center">Plats</h2>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nom du plat</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Disponibilité</th>
                    </tr>
                </thead>

                <tbody>
                    {% for food in foods %}
                        <tr>
                            <th scope="row">{{ food.product_name }}</th>
                            <td>{{ food.price }} CHF</td>
                            <td><span class="available">Oui</span></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <br><br>

            <h2 class="text-center">Boissons non-alcoolisées </h2>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nom de la boisson</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Disponibilité</th>
                    </tr>
                </thead>

                <tbody>
                    {% for drinkWithoutAlcohol in drinksWithoutAlcohol %}
                        <tr>
                            <th scope="row">{{ drinkWithoutAlcohol.product_name }}</th>
                            <td>{{ drinkWithoutAlcohol.price }} CHF</td>
                            <td><span class="{{ drinkWithoutAlcohol.quantity > 0 ? 'available' : 'unavailable' }}">{{ drinkWithoutAlcohol.quantity > 0 ? 'oui' : 'non' }}</span></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <br><br>

            <h2 class="text-center">Boissons alcoolisées </h2>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nom de la boisson</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Alcool</th>
                        <th scope="col">Disponibilité</th>
                    </tr>
                </thead>

                <tbody>
                    {% for drinkWithAlcohol in drinksWithAlcohol %}
                        <tr>
                            <th scope="row">{{ drinkWithAlcohol.product_name }}</th>
                            <td>{{ drinkWithAlcohol.price }} CHF</td>
                            <td>{{ drinkWithAlcohol.alcoholLevel }} %</td>
                            <td><span class="{{ drinkWithAlcohol.quantity > 0 ? 'available' : 'unavailable' }}">{{ drinkWithAlcohol.quantity > 0 ? 'oui' : 'non' }}</span></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}