<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, user-scalable=no">

        <title>{% block title %}{% endblock %} | PUB'ify</title>

        <link rel="stylesheet" href="/css/lib/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="/css/style.css" type="text/css" />
    </head>
    <body>

        <header>
            <div class="container">
                <div class="col-lg-12">
                    <a class="login" href="{{ path_for('auth_get_login') }}">Connexion</a>
                </div>
            </div>
        </header>

        <div id="page-content">
            <div class="container">

                <a href="{{ path_for('home') }}"><img id="pubify-logo" src="/images/pubify-logo.png" alt="PUB'ify logo"></a>

                {% block body %}
                {% endblock %}
            </div>
        </div>


        <script type="text/javascript" src="/js/lib/jquery-3.4.1.min.js"></script>
        <script type="text/javascript" src="/js/lib/bootstrap.min.js"></script>

        {% block specificJS %}
        {% endblock %}

    </body>
</html>