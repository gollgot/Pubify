{% extends 'Layout/admin_layout.html.twig' %}

{% block title %}Nourritures non-composées{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">

            {% include 'FlashMessages/success.html.twig' %}

            <h1>Toutes les nourritures non-composées</h1>

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Quantité en stock</th>
                        <th scope="col">Prix (CHF)</th>
                        <th scope="col">Date début de vente</th>
                        <th scope="col">Date fin de vente</th>
                    </tr>
                </thead>

                <tbody>
                    {% for food in foods %}
                        <tr>
                            <th scope="row">{{ food.product_name }}</th>
                            <td>{{ food.quantity }}</td>
                            <td>{{ food.price }}</td>
                            <td>{{ food.startSaleDate }}</td>
                            <td>{{ food.endSaleDate ? food.endSaleDate : 'Aucune'}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}