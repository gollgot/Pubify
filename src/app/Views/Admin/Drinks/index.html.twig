{% extends 'Layout/admin_layout.html.twig' %}

{% block title %}Boissons{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">

            {% include 'FlashMessages/success.html.twig' %}

            <h1>Toutes les boissons</h1>

            <a class="btn btn-primary" href="{{ path_for('admin_drinks_create') }}">Ajouter une boisson</a><br><br>

            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Quantité en stock</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Pourcentage d'alcool</th>
                    <th scope="col">Unité</th>
                    <th scope="col">Date début vente</th>
                    <th scope="col">Date fin vente</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>

                <tbody>

                {% for drink in drinks%}
                    <tr>
                        <th scope="row">{{ drink.product_name }}</th>
                        <td>{{ drink.quantity }}</td>
                        <td>{{ drink.price }} CHF</td>
                        <td>{{ drink.alcoholLevel }}</td>
                        <td>{{ drink.unit_name }}</td>
                        <td>{{ drink.startSaleDate }}</td>
                        <td>{{ drink.endSaleDate ? drink.endSaleDate : 'Aucune'}}</td>
                        <td><a class="btn btn-warning" href="#">Modifier</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}