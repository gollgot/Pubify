{% extends 'Layout/admin_layout.html.twig' %}

{% block title %}Ingrédients{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">

            {% include 'FlashMessages/success.html.twig' %}

            <h1>Tous les ingrédients</h1>

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Quantité en stock</th>
                        <th scope="col">Unité</th>
                    </tr>
                </thead>

                <tbody>

                {% for ingredient in ingredients %}
                    <tr>
                        <th scope="row">{{ ingredient.product_name }}</th>
                        <td>{{ ingredient.quantity }}</td>
                        <td>{{ ingredient.unit_name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}