{% extends 'Layout/admin_layout.html.twig' %}

{% block title %}Nouvelle happyhour{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">

            {% include 'FlashMessages/error.html.twig' %}

            <h1>Nouvelle happyhour</h1>

            <form id="drinks-create-form" action="{{ path_for('admin_happyhours_store') }}" method="post">

                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <span class="text-danger">* Champs obligatoire</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label for="happyhours-create-startAt">Date / heure de début <span class="text-danger">*</span></label>
                            <input type="datetime-local" class="form-control" id="happyhours-create-startAt" name="startAt" required>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label for="happyhours-create-duration">Durée (h:m) <span class="text-danger">*</span></label>
                            <input type="time" min="00:01" max="10:00" class="form-control" id="happyhours-create-duration" name="duration" required>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label for="happyhours-create-reduction">Pourcentage de réduction <span class="text-danger">*</span></label>
                            <input type="number" min="1" max="100" step="1" class="form-control" id="happyhours-create-reduction" name="reduction" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="happyhours-create-drinks">Boissons <span class="text-danger">*</span></label>
                            <select class="col-lg-12" id="happyhours-create-drinks" name="drinks[]" multiple="multiple" required>
                                {% for drink in drinks %}
                                    <option value="{{ drink.id }}" >{{ drink.product_name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <button class="btn btn-success">Créer</button>

            </form>

        </div>
    </div>

{% endblock %}

{% block specificJS %}
    $(document).ready(function() {
        $('#happyhours-create-drinks').select2();
    });
{% endblock %}