{% extends 'Layout/main_layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">

            <div id="login-wrapper">

                {% include 'FlashMessages/error.html.twig' %}

                <form action="{{ path_for('auth_post_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value="{{ flash.getMessage('lastEmail')|first }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

        </div>
    </div>

{% endblock %}